<style>
.round {border-radius: 50%;}

.fabtn {
  transition: all 300ms ease-in-out;
  width: 56px;
  height: 56px;
  background-color: #444;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  right: 30px;
  bottom: 15px;
  -webkit-user-select: none;
     -moz-user-select: none;
      -ms-user-select: none;
          user-select: none;
  cursor: pointer;
  color: white;
  font-size: 2em;
  box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.16), 0px 3px 10px rgba(0, 0, 0, 0.16);
}

.fabtn i {transition: all 300ms ease-in-out;will-change: transform;}

.inner-fabtns .fabtn {
  width: 40px;
  height: 40px;
  right: 38px;
  bottom: 23px;
  font-size: 1.5em;
  will-change: bottom;
}

.inner-fabtns.show .fabtn:nth-child(1) {bottom: 4em;}
.inner-fabtns.show .fabtn:nth-child(2) {bottom: 6.1em;}
.inner-fabtns.show .fabtn:nth-child(3) {bottom: 8.2em;}
.inner-fabtns.show .fabtn:nth-child(4) {bottom: 10.3em;}
.inner-fabtns.show .fabtn:nth-child(5) {bottom: 12.4em;}
.inner-fabtns.show .fabtn:nth-child(6) {bottom: 14.5em;}

.inner-fabtns.show + .fabtn i {
  -webkit-transform: rotate(135deg);
          transform: rotate(135deg);
}

.fabtn:before {
  content: attr(data-tooltip);
  transition: opacity 150ms cubic-bezier(0.4, 0, 1, 1);
  position: absolute;
  visibility: hidden;
  opacity: 0;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
  color: #ececec;
  right: 50px;
  top: 25%;
  background-color: rgba(70, 70, 70, 0.9);
  font-size: 0.5em;
  line-height: 1em;
  display: inline-block;
  text-align: center;
  white-space: nowrap;
  border-radius: 2px;
  padding: 6px 8px;
  max-width: 200px;
  font-weight: bold;
  text-overflow: ellipsis;
  vertical-align: middle;
}

.open#fabtnbtn{
transform: rotate(45deg);
}

.inner-fabtns.show .fabtn:before {
  content: attr(data-tooltip);
  visibility: visible;
  opacity: 1;
}

</style>
<div class="inner-fabtns">
  <div class="fabtn round createNewCatBtn" id="fabtn4" data-tooltip="{{l("New category")}}"><i class="fa fa-fw fa-plus"></i></div>
</div>
<div class="fabtn round ripple" id="fabtnbtn">+</div>
<script>
var fabtnbtn = document.getElementById('fabtnbtn');
var innerFabtns = document.getElementsByClassName('inner-fabtns')[0];
fabtnbtn.addEventListener('click', function (){
  innerFabtns.classList.toggle('show');
  fabtnbtn.classList.toggle('open');
});
document.addEventListener('click', function (e) {
	switch (e.target.id) {
		case "fabtnbtn":
		case "fabtn2":
		case "fabtn3":
		case "fabtn4":
		case "fabtnIcon":
			break;
		default:
			innerFabtns.classList.remove('show');
			break;}
});
</script>